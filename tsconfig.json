{
    "compilerOptions": {
        "target": "es2018",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": ["src/", "src/pages/*"],
    "lib": ["es2015"]
}
